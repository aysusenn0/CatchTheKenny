                app:srcCompat="@drawable/kennymccormack" />

            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="97dp"
                android:layout_height="89dp"
                android:onClick="increaseScore"
                app:layout_column="2"
                app:layout_row="2"
                app:srcCompat="@drawable/kennymccormack" />

            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="97dp"
