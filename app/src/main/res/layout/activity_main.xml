            <ImageView
                android:id="@+id/imageView14"
                android:layout_width="97dp"
                android:layout_height="89dp"
                android:onClick="increaseScore"
                app:layout_column="1"
                app:layout_row="3"
                app:srcCompat="@drawable/kennymccormack" />

            <ImageView
                android:id="@+id/imageView15"
                android:layout_width="97dp"
                android:layout_height="89dp"
                android:onClick="increaseScore"
                app:layout_column="2"
                app:layout_row="3"
                app:srcCompat="@drawable/kennymccormack" />

            <ImageView
                android:id="@+id/imageView16"
                android:layout_width="97dp"
                android:layout_height="89dp"
                android:onClick="increaseScore"
                app:layout_column="3"
                app:layout_row="3"
